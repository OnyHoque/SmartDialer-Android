<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.Home"
    android:clickable="false"
    android:background="#a0f7f4">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="horizontal"
        android:background="@drawable/roundcorners">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please choose your service provider"
        android:id="@+id/hometxt1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="15dp"
        android:elevation="20dp"
        android:drawableTintMode="src_over"
        android:password="false"
        android:background="@drawable/headinground"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="GrameenPhone"
        android:id="@+id/gpbutton"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/hometxt1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teletalk"
        android:id="@+id/teletalkbutton"
        android:layout_below="@+id/gpbutton"
        android:layout_marginTop="32dp"
        android:layout_alignLeft="@+id/gpbutton"
        android:layout_alignStart="@+id/gpbutton"
        android:layout_alignRight="@+id/gpbutton"
        android:layout_alignEnd="@+id/gpbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airtel"
        android:id="@+id/airtelbutton"
        android:layout_below="@+id/teletalkbutton"
        android:layout_marginTop="37dp"
        android:layout_alignLeft="@+id/teletalkbutton"
        android:layout_alignStart="@+id/teletalkbutton"
        android:layout_alignRight="@+id/teletalkbutton"
        android:layout_alignEnd="@+id/teletalkbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banglalink"
        android:id="@+id/banglalinkbutton"
        android:layout_below="@+id/airtelbutton"
        android:layout_alignLeft="@+id/airtelbutton"
        android:layout_alignStart="@+id/airtelbutton"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/airtelbutton"
        android:layout_alignEnd="@+id/airtelbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robi"
        android:id="@+id/robibutton"
        android:layout_below="@+id/banglalinkbutton"
        android:layout_alignLeft="@+id/banglalinkbutton"
        android:layout_alignStart="@+id/banglalinkbutton"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/banglalinkbutton"
        android:layout_alignEnd="@+id/banglalinkbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/gpbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/gpbutton"
        android:layout_toLeftOf="@+id/gpbutton"
        android:layout_toStartOf="@+id/gpbutton"
        android:src="@drawable/gp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/teletalkbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/teletalkbutton"
        android:layout_toLeftOf="@+id/teletalkbutton"
        android:layout_toStartOf="@+id/teletalkbutton"
        android:src="@drawable/teletalk" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/airtelbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/airtelbutton"
        android:layout_toLeftOf="@+id/airtelbutton"
        android:layout_toStartOf="@+id/airtelbutton"
        android:src="@drawable/airtel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/banglalinkbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/robibutton"
        android:layout_toLeftOf="@+id/banglalinkbutton"
        android:layout_toStartOf="@+id/banglalinkbutton"
        android:src="@drawable/banglalink" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/robibutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/robibutton"
        android:layout_toLeftOf="@+id/robibutton"
        android:layout_toStartOf="@+id/robibutton"
        android:src="@drawable/robi" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Developer"
            android:id="@+id/developer"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>
