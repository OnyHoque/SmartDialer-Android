<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.Banglalink"
    android:background="#b8ffb407">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/banglalinkroundcorner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Banglalink Different Codes"
        android:id="@+id/banglalinkmain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        android:background="@drawable/headinground"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/bbutton1"
        android:layout_below="@+id/banglalinkmain"
        android:layout_alignRight="@+id/banglalinkmain"
        android:layout_alignEnd="@+id/banglalinkmain"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance :"
        android:id="@+id/ban1"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/bbutton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/bbutton1"
        android:layout_toLeftOf="@+id/bbutton1"
        android:layout_toStartOf="@+id/bbutton1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/bbutton2"
        android:layout_below="@+id/bbutton1"
        android:layout_alignRight="@+id/bbutton1"
        android:layout_alignEnd="@+id/bbutton1"
        android:layout_marginTop="35dp"
        android:layout_alignLeft="@+id/bbutton1"
        android:layout_alignStart="@+id/bbutton1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/bbutton3"
        android:layout_below="@+id/bbutton2"
        android:layout_alignRight="@+id/bbutton2"
        android:layout_alignEnd="@+id/bbutton2"
        android:layout_marginTop="37dp"
        android:layout_alignLeft="@+id/bbutton2"
        android:layout_alignStart="@+id/bbutton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit"
        android:id="@+id/bbutton4"
        android:layout_below="@+id/bbutton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_alignLeft="@+id/bbutton3"
        android:layout_alignStart="@+id/bbutton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Balance :"
        android:id="@+id/ban2"
        android:layout_alignTop="@+id/bbutton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/bbutton2"
        android:layout_toStartOf="@+id/bbutton2"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Own Number :"
        android:id="@+id/ban3"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/bbutton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_toLeftOf="@+id/bbutton3"
        android:layout_toStartOf="@+id/bbutton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Website :"
        android:id="@+id/ban4"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/bbutton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_toLeftOf="@+id/bbutton4"
        android:layout_toStartOf="@+id/bbutton4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/blinternet"
        android:layout_below="@+id/bbutton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_alignLeft="@+id/bbutton4"
        android:layout_alignStart="@+id/bbutton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Packages :"
        android:id="@+id/textView18"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/blinternet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/blinternet"
        android:layout_toStartOf="@+id/blinternet"
        android:textIsSelectable="true" />

    </RelativeLayout>

</ScrollView>
