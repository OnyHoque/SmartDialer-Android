<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.TeleAgamiinternet"
    android:background="#275193">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="horizontal"
        android:background="@drawable/teletalkroundcorner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Agami/GPA5 Internet Packages"
            android:id="@+id/teletalkheader"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:background="@drawable/headinground"
            android:clickable="true"
            android:elevation="10dp" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/ite13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="130dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/ite14"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="230dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/ite15"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="330dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20MB 6tk  1day"
            android:id="@+id/textView58"
            android:layout_alignTop="@+id/ite13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/ite13"
            android:layout_toStartOf="@+id/ite13"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1GB 100tk 30days"
            android:id="@+id/textView59"
            android:textColor="#000000"
            android:layout_alignTop="@+id/ite14"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/ite14"
            android:layout_toStartOf="@+id/ite14"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5GB 350tk 30days"
            android:id="@+id/textView60"
            android:textColor="#000000"
            android:layout_alignTop="@+id/ite15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/ite15"
            android:layout_toStartOf="@+id/ite15"
            android:textSize="15dp" />

    </RelativeLayout>

</ScrollView>
