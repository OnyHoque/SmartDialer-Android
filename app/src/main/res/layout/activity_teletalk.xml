<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.Teletalk"
    android:background="#689afc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/teletalkroundcorner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Teletalk Different Codes"
        android:id="@+id/teletalkmain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:elevation="10dp"
        android:background="@drawable/headinground"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/tbutton1"
        android:layout_below="@+id/teletalkmain"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance :"
        android:id="@+id/tel1"
        android:layout_alignTop="@+id/tbutton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/tbutton1"
        android:layout_toStartOf="@+id/tbutton1"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/tbutton2"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/tbutton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tbutton1"
        android:layout_alignStart="@+id/tbutton1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Balance :"
        android:id="@+id/tel2"
        android:layout_alignTop="@+id/tbutton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tbutton2"
        android:layout_toStartOf="@+id/tbutton2"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/tbutton3"
        android:layout_below="@+id/tbutton2"
        android:layout_alignLeft="@+id/tbutton2"
        android:layout_alignStart="@+id/tbutton2"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/tbutton2"
        android:layout_alignEnd="@+id/tbutton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Own Number"
        android:id="@+id/tel3"
        android:layout_alignTop="@+id/tbutton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tbutton3"
        android:layout_toStartOf="@+id/tbutton3"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visit"
        android:id="@+id/tbutton4"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/tbutton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tbutton3"
        android:layout_alignStart="@+id/tbutton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Website :"
        android:id="@+id/tel4"
        android:layout_alignTop="@+id/tbutton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tbutton4"
        android:layout_toStartOf="@+id/tbutton4"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/tel5"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tbutton4"
        android:layout_alignRight="@+id/tbutton4"
        android:layout_alignEnd="@+id/tbutton4"
        android:layout_alignLeft="@+id/tbutton4"
        android:layout_alignStart="@+id/tbutton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Regular Internet Packages :"
        android:id="@+id/textView44"
        android:layout_alignTop="@+id/tel5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tel5"
        android:layout_toStartOf="@+id/tel5"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:textSize="15dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/tel6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="545dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/tel7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="630dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Economy Internet Packages :"
            android:id="@+id/textView46"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/tel6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tel6"
            android:layout_toStartOf="@+id/tel6"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Agami Internet Packages :"
            android:id="@+id/textView47"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignTop="@+id/tel7"
            android:layout_alignLeft="@+id/textView46"
            android:layout_alignStart="@+id/textView46"
            android:layout_toLeftOf="@+id/tel7"
            android:layout_toStartOf="@+id/tel7" />

    </RelativeLayout>

</ScrollView>
