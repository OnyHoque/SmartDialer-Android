<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.Robi"
    android:background="#8d0505">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/robiroundcorner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Robi Different Codes"
        android:id="@+id/robimain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:elevation="10dp"
        android:background="@drawable/headinground"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/rbutton1"
        android:layout_below="@+id/robimain"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance :"
        android:id="@+id/rob1"
        android:layout_alignTop="@+id/rbutton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/rbutton1"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/rbutton1"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/rbutton2"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/rbutton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/rbutton1"
        android:layout_alignStart="@+id/rbutton1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Balance :"
        android:id="@+id/rob2"
        android:layout_alignTop="@+id/rbutton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/rbutton2"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/rbutton2"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/rbutton3"
        android:layout_below="@+id/rbutton2"
        android:layout_alignLeft="@+id/rbutton2"
        android:layout_alignStart="@+id/rbutton2"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/rbutton2"
        android:layout_alignEnd="@+id/rbutton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Own Number :"
        android:id="@+id/rob3"
        android:layout_alignTop="@+id/rbutton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/rbutton3"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/rbutton3"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visit"
        android:id="@+id/rbutton4"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/rbutton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/rbutton3"
        android:layout_alignStart="@+id/rbutton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Website :"
        android:id="@+id/rob4"
        android:layout_alignTop="@+id/rbutton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/rbutton4"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/rbutton4"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visit"
        android:id="@+id/rbutton5"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/rbutton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/rbutton4"
        android:layout_alignStart="@+id/rbutton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Packages :"
        android:id="@+id/textView61"
        android:textColor="#000000"
        android:layout_alignTop="@+id/rbutton5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/rbutton5"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/rbutton5"
        android:textSize="15dp" />

    </RelativeLayout>

</ScrollView>
