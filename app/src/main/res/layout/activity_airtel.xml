<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.Airtel"
    android:background="#fdbf0006"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:background="@drawable/airtelroundcorner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Airtel Different Codes"
        android:id="@+id/maintext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:elevation="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/headinground" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/abutton1"
        android:layout_below="@+id/maintext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance :"
        android:id="@+id/air1"
        android:layout_alignTop="@+id/abutton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/abutton2"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/abutton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/abutton1"
        android:layout_alignStart="@+id/abutton1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Balance :"
        android:id="@+id/air2"
        android:layout_alignTop="@+id/abutton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/abutton2"
        android:layout_toStartOf="@+id/abutton2"
        android:layout_marginLeft="5dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/abutton3"
        android:layout_below="@+id/abutton2"
        android:layout_alignLeft="@+id/abutton2"
        android:layout_alignStart="@+id/abutton2"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/abutton2"
        android:layout_alignEnd="@+id/abutton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Own Number :"
        android:id="@+id/air3"
        android:layout_alignTop="@+id/abutton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visit"
        android:id="@+id/abutton4"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/abutton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/abutton3"
        android:layout_alignStart="@+id/abutton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Website :"
        android:id="@+id/air4"
        android:layout_alignTop="@+id/abutton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/airinternet"
        android:layout_below="@+id/abutton4"
        android:layout_alignRight="@+id/abutton4"
        android:layout_alignEnd="@+id/abutton4"
        android:layout_marginTop="47dp"
        android:layout_alignLeft="@+id/abutton4"
        android:layout_alignStart="@+id/abutton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Packages :"
        android:id="@+id/textView29"
        android:layout_alignTop="@+id/airinternet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/airinternet"
        android:layout_toStartOf="@+id/airinternet"
        android:layout_marginLeft="5dp"
        android:textSize="15dp" />

    </RelativeLayout>

</ScrollView>
