<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.Grameenphone"
    android:background="#b620545b">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/gproundcorner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Grameenphone Different Codes"
        android:id="@+id/maintext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        android:elevation="10dp"
        android:background="@drawable/headinground"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/gbutton1"
        android:layout_below="@+id/maintext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance :"
        android:id="@+id/gra1"
        android:layout_alignTop="@+id/gbutton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/gbutton1"
        android:layout_toStartOf="@+id/gbutton1"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/gbutton2"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/gbutton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/gbutton1"
        android:layout_alignStart="@+id/gbutton1"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Balance :"
        android:id="@+id/gra2"
        android:layout_alignTop="@+id/gbutton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_alignRight="@+id/gra3"
        android:layout_alignEnd="@+id/gra3"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/gbutton3"
        android:layout_below="@+id/gbutton2"
        android:layout_alignLeft="@+id/gbutton2"
        android:layout_alignStart="@+id/gbutton2"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/gbutton2"
        android:layout_alignEnd="@+id/gbutton2"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Own Number :"
        android:id="@+id/gra3"
        android:layout_alignTop="@+id/gbutton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_alignRight="@+id/gra1"
        android:layout_alignEnd="@+id/gra1"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visit"
        android:id="@+id/gbutton4"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/gbutton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/gbutton3"
        android:layout_alignStart="@+id/gbutton3"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Website :"
        android:id="@+id/gra4"
        android:layout_alignTop="@+id/gbutton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#030303"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/gra5"
        android:layout_alignEnd="@+id/gra5"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/gpinternet"
        android:layout_below="@+id/gbutton4"
        android:layout_alignRight="@+id/gbutton4"
        android:layout_alignEnd="@+id/gbutton4"
        android:layout_marginTop="45dp"
        android:layout_alignLeft="@+id/gbutton4"
        android:layout_alignStart="@+id/gbutton4"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Internet Packages :"
        android:id="@+id/gra5"
        android:layout_alignTop="@+id/gpinternet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/gra3"
        android:layout_alignEnd="@+id/gra3"
        android:textSize="15dp" />

    </RelativeLayout>

</ScrollView>
