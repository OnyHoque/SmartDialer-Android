<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoque.smartdialerbd.TeleEcointernet"
    android:background="#2c78dc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        android:background="@drawable/teletalkroundcorner" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Regular Internet Packages"
            android:id="@+id/teletalkEcoheader"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:background="@drawable/headinground"
            android:clickable="true"
            android:elevation="10dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/ite10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/ite11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="240dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1GB- 99tk- 30day"
            android:id="@+id/textView45"
            android:layout_alignTop="@+id/ite10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/ite10"
            android:layout_toStartOf="@+id/ite10"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5GB- 300tk- 30day"
            android:id="@+id/textView57"
            android:layout_alignTop="@+id/ite11"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/ite11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

    </RelativeLayout>

</ScrollView>
